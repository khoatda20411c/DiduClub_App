<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginmethodActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chào!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng đăng nhập để tiếp tục"
        android:textSize="25dp"
        android:textColor="#838080"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài khoản:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="@color/black"
        app:endIconTint="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Username_activity_loginmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tài khoản"
            android:textSize="20dp"
            android:backgroundTint="@color/white"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp" />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_baseline_key_24"
        app:startIconTint="@color/black"
        app:endIconTint="@color/black"
        app:endIconMode="password_toggle"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_Password_activity_loginmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:textSize="20dp"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/txt_ForgotPass_activity_loginmethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#838080"
        android:text="@string/forgetpassword"
        android:paddingRight="20dp"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:gravity="right"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Login_activity_loginmethod"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Đăng nhập"/>

    <View
        android:layout_width="360dp"
        android:layout_height="0.3dp"
        android:background="#838080"
        android:layout_marginTop="27dp"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LoginWithFacebook_activity_loginmethod"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#3B5999"
        android:drawableStart="@drawable/icon_facebook"
        android:paddingHorizontal="60dp"
        android:text="Tiếp tục với Facebook"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LoginWithGoogle_activity_loginmethod"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/icon_gmail"
        android:paddingHorizontal="70dp"
        android:textStyle="bold"
        android:text="Tiếp tục với Google"/>

</LinearLayout>