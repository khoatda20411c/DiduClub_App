<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginmethodActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chào!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng đăng nhập để tiếp tục"
        android:textSize="25dp"
        android:textColor="#838080"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:layout_width="387dp"
        android:layout_gravity="center"
        android:hint="Tên đăng nhập"
        android:textColorHint="#838080"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#838080"
        android:drawableLeft="@drawable/ic_baseline_person_24"/>
    <EditText
        android:layout_width="387dp"
        android:layout_gravity="center"
        android:hint="Mật khẩu"
        android:textColorHint="#838080"
        android:textSize="25dp"
        android:backgroundTint="#838080"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_key_24"/>
    <TextView
        android:id="@+id/txt_ForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#838080"
        android:text="@string/forgetpassword"
        android:paddingRight="15dp"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:gravity="right"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Đăng nhập"/>
    <View
        android:layout_width="360dp"
        android:layout_height="0.3dp"
        android:background="#838080"
        android:layout_marginTop="27dp"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#3B5999"
        android:drawableStart="@drawable/icon_facebook"
        android:paddingHorizontal="60dp"
        android:text="Tiếp tục với Facebook"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/icon_gmail"
        android:paddingHorizontal="70dp"
        android:textStyle="bold"
        android:text="Tiếp tục với Google"/>
</LinearLayout>