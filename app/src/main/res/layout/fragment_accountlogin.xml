<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountLoginFragment"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shadow_button_layer_list"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imv_AccountAvatar_activity_account"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/z3890555137815_e911474c2b86ed886145f6ab1fae50bd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_AccountLastName_activity_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạ"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:id="@+id/txt_AccountFirstName_activity_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phúc"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_AccountEmail_activity_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"
                    android:text="ongtrumandroid123@gmail.com"
                    android:textColor="#727272"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành viên"
                        android:textColor="#727272"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:id="@+id/txt_AccountRate_activity_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vàng"
                        android:textColor="#727272"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_AccountPoint_activity_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_celebration_24"
                    android:gravity="right"
                    android:text="Tích lũy: 21000 điểm  "
                    android:textColor="#000000"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_border_button"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/btn_PersonalInfo_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shadow_button_layer_list"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingHorizontal="10dp"
                android:text="   Thông tin cá nhân"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_HistoryOrder_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shadow_button_layer_list"
                android:drawableLeft="@drawable/ic_baseline_history_24"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingHorizontal="10dp"
                android:text="   Lịch sử đơn hàng"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_VoucherList_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shadow_button_layer_list"
                android:drawableLeft="@drawable/ic_baseline_card_giftcard_24"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingHorizontal="10dp"
                android:text="   Danh sách voucher"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_AccountSetting_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_button_layer_list"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingHorizontal="10dp"
                android:text="   Cài đặt tài khoản"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_button"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/btn_SupportAndRule_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shadow_button_layer_list"
                android:text="Trung tâm hỗ trợ / Điều khoản"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_Logout_activity_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shadow_button_logout"
                android:text="Đăng xuất tài khoản"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>