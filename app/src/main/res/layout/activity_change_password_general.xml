        <Button
            android:id="@+id/btn_SavePassword_ChangePasswordGeneralActivity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_shadow_modify_button"
            android:layout_marginTop="30dp"
            app:backgroundTint= "@null"
            android:text="Lưu thay đổi mật khẩu"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_Cancel_ChangePasswordGeneralActivity"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hủy"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/shadow_button_layer_list"
