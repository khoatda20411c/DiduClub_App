<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeforeLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img5568_copy_dimmed"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_Login_activity_before_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_login"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:backgroundTint="@null"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_Register_activity_before_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_login_border"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:backgroundTint="@null"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_BackToHomePage_activity_before_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_login_border"
            android:text="Trở về trang chủ"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            app:backgroundTint="@null"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>