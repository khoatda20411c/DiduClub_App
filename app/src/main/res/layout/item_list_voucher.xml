<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_layer_voucher"
            android:layout_marginBottom="2dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_VoucherName_VoucherActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Miễn phí vận chuyển"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#F44336"
                android:gravity="center|left"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_layer_voucher_below"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/imv_VoucherImage_VoucherActivity"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icons8_free_delivery"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/txt_VoucherTerms_VoucherActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điều kiện: Tất cả đơn hàng"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_VoucherDate_VoucherActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày hết hạn: 15/12/2023"
                    android:textColor="#F44336"
                    android:textSize="19sp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

