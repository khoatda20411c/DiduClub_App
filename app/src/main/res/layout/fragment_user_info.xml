<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"/>


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_UserAvatar_UserInfoActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sample_shirt"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imv_UserClass_UserInfoActivity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gold"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txt_UserClass_UserInfoActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành viên vàng"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_UserPoint_UserInfoActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tích lũy được: 21000 điểm"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadow_button_layer_list"
            app:backgroundTint = "@null"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:padding="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_UserName_UserInfoActivity"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Đinh Tường Văn"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadow_button_layer_list"
            app:backgroundTint = "@null"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:padding="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_UserSex_UserInfoActivity"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadow_button_layer_list"
            app:backgroundTint = "@null"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:padding="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SĐT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_UserPhone_UserInfoActivity"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="0123.4567.89"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadow_button_layer_list"
            app:backgroundTint = "@null"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:padding="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_UserDate_UserInfoActivity"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="22 - 05 - 2002"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_Modify_UserInfoActivity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_shadow_modify_button"
            android:layout_marginTop="30dp"
            app:backgroundTint= "@null"
            android:text="Chỉnh sửa thông tin cá nhân"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>