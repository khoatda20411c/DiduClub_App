<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Confirm_order_Activity"
        android:orientation="vertical"
        android:padding="15dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/imv_btn_BackToCart_activity_comfirm_order"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận đơn hàng"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:background="@drawable/shadow_button_layer_list"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_button_layer_list"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/txt_Name_activity_comfirm_order"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Văn A"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_PhoneNumber_activity_comfirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0934922475"
                    android:layout_marginEnd="240dp"/>

                <ImageButton
                    android:id="@+id/imv_btn_editInformation_activity_comfirm_order"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_ShippingAddress_activity_comfirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="190 Lý Tế Xương, Phường Linh Đông, thành phố Thủ Đức, TP. Hồ Chí Minh"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:background="@drawable/shadow_button_layer_list"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shadow_button_layer_list">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:checked="true"
                    android:id="@+id/rad_Delivery_activity_comfirm_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng tiêu chuẩn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_PriceDelivery_activity_comfirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.000 VNĐ"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhận hàng vào 30 T11 - 2 T12"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:background="@drawable/shadow_button_layer_list"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shadow_button_layer_list">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:checked="true"
                    android:id="@+id/rad_Cash_activity_comfirm_order"
                    android:text="Trả tiền mặt khi nhận hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rad_InternetBanking_activity_comfirm_order"
                    android:text="Internet Banking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rad_Momo_activity_comfirm_order"
                    android:text="Thanh toán bằng Momo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áp dụng mã giảm giá"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:background="@drawable/shadow_button_layer_list"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/shadow_button_layer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm"/>
                <TextView
                    android:id="@+id/txt_RatingPoint_activity_comfirm_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5000 VNĐ"
                    android:gravity="right"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher"/>

                <TextView
                    android:id="@+id/txt_VoucherName_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DiduClub5000"
                    android:layout_marginEnd="20dp"/>

                <ImageButton
                    android:id="@+id/imv_btn_ChooseVoucher_activity_comfirm_order"
                    android:layout_marginLeft="-20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết thanh toán"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:background="@drawable/shadow_button_layer_list"/>
        <LinearLayout
            android:background="@drawable/shadow_button_layer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền hàng"/>
                <TextView
                    android:id="@+id/txt_ToTalProductPrice_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="299.000 VNĐ"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển"/>
                <TextView
                    android:id="@+id/txt_PriceDeliveryThanhToan_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25.000 VNĐ"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm"/>
                <TextView
                    android:id="@+id/txt_Point_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-5.000 VNĐ"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher"/>
                <TextView
                    android:id="@+id/txt_Voucher_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-10.000 VNĐ"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán"/>
                <TextView
                    android:id="@+id/txt_ToTalSum_activity_comfirm_order"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="309.000 VNĐ"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_DatHang_activity_comfirm_order"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow_button_layer_list"
            app:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:text="Đặt hàng"/>

    </LinearLayout>
</ScrollView>