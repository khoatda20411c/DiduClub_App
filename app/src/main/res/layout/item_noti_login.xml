<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/shadow_button_layer_list">

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:elevation="12dp"
        android:layout_margin="10dp"
        android:id="@+id/card_avtChat"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:id="@+id/imv_NotiPhoto"
            android:src="@drawable/promotion"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_NotiName_item_noti_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khuyến mãi cập bến"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_NotiDescription_item_noti_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 ngày nữa thôi Didu sẽ có khuyến mãi cực lớn lên đến 50%, còn chờ gì nữa mà không tích tiền ngay từ bây giờ"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/txt_NotiType_item_noti_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã xem"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>